<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New post</div>
    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" placeholder="title">
            
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="post[image]" placeholder="image">
            
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="post[body]"></textarea>
        </div>
        <button class="ui big blue basic button" type="submit">Submit</button>
    </form>
</div>

